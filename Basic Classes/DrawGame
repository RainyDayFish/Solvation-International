import java.awt.*;
import java.awt.image.BufferedImage;
import java.util.*;
import javax.swing.*;
public class DrawGame  extends JPanel{
Player p;
GameLevel l;
int questionNum=0;
  public DrawGame(Player p, GameLevel l, int num){
  this.p=p;
  this.l=l;
  this.questionNum=num;
  }
  
  public void drawPlatforms(Graphics g){
        add (new DrawGame ());
    try{
    BufferedImage platformPic=new BufferedReader(new FileReader("Platform.png"));
      for(Platform a:l.getPlatforms()){
      g.drawImage (platformPic, a.getX(), a.getY(), null);
      }
    }catch(IOException e){
    
    }

  
  }
  
  
}
